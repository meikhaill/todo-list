
<!DOCTYPE html>
<html>
  <head>
    <title>Todo List</title>
  </head>
  <body>
    <h1>Todo List</h1>
    <ul>
      <% @todos.each do |todo| %>
        <li><%= todo %></li>
      <% end %>
      <%= @hello %>
    </ul>
    <form action="/add_todo" method="post">
      <input type="text" name="todo" placeholder="Enter a new todo">
      <button type="submit">Add Todo</button>
    </form>
  </body>
</html>
